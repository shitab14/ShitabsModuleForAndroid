<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CustomBubbleBottomTabActivity"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/llBottomTab"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#C80000"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:id="@+id/llHomeTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:foreground="?attr/selectableItemBackground">
                <ImageView
                    android:id="@+id/ivHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic__home_white"
                    tools:ignore="VectorDrawableCompat" />
                <TextView
                    android:id="@+id/tvHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Home"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLiveTvTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:foreground="?attr/selectableItemBackground">
                <ImageView
                    android:id="@+id/ivLiveTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_live_tv_white"
                    tools:ignore="VectorDrawableCompat" />
                <TextView
                    android:id="@+id/tvLiveTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Live TV"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPlaylistTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:foreground="?attr/selectableItemBackground">
                <ImageView
                    android:id="@+id/ivPlaylist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_queue_music_white"
                    tools:ignore="VectorDrawableCompat" />
                <TextView
                    android:id="@+id/tvPlaylist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Playlist"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSettingsTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_settings_white"
                    android:foreground="?attr/selectableItemBackground"
                    tools:ignore="VectorDrawableCompat" />
                <TextView
                    android:id="@+id/tvSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Settings"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            app:layout_constraintTop_toTopOf="@id/llBottomTab"
            app:layout_constraintBottom_toBottomOf="@id/llBottomTab"
            android:layout_marginBottom="95dp"
            android:background="@android:color/transparent"
            >
            <LinearLayout
                android:id="@+id/llCircleHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_tab_circle"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic__home_white"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llCircleLiveTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_tab_circle"
                android:gravity="center"
                android:visibility="invisible"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_live_tv_white"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llCirclePlaylist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_tab_circle"
                android:gravity="center"
                android:visibility="invisible"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_queue_music_white"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llCircleSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_tab_circle"
                android:gravity="center"
                android:visibility="invisible"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_settings_white"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>